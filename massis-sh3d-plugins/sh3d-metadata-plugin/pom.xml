	<artifactId>sh3d-metadata-plugin</artifactId>
	<packaging>jar</packaging>
	<name>sh3d-metadata-plugin</name>
	<url>www.massisframework.com</url>
	<description>
		Metadata plugin for sweetHome3D. Uses the sh3d-metadata package.
	</description>
	<build>
